<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="MediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediaButton.Play">
        <item name="android:src">@drawable/aa_video_play_button_selector</item>
    </style>

    <style name="MediaButton.Ffwd">
        <item name="android:src">@drawable/aa_video_godown_button_selector</item>
    </style>

    <style name="MediaButton.Rew">
        <item name="android:src">@drawable/aa_video_drawback_button_selector</item>
    </style>

    <style name="MediaButton.Pause">
        <item name="android:src">@drawable/aa_video_pause_button_selector</item>
    </style>

